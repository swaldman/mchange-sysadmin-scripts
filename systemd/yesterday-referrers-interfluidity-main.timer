[Unit]
Description=schedule daily yesterday's referrer report from main interfluidity.com

[Timer]
# Daily, between 3am and 6am Eastern
OnCalendar=*-*-* 12:00:00 America/New_York
RandomizedDelaySec=1hr

#File describing job to execute
Unit=yesterday-referrers-interfluidity-main.service

[Install]
WantedBy=timers.target

# See e.g. https://opensource.com/article/20/7/systemd-timers
#          https://fedoramagazine.org/systemd-timers-for-scheduling-tasks/
	   